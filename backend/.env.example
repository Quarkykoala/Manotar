# Manobal Backend Environment Variables

# Flask Configuration
FLASK_APP=src/app.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///instance/manobal.db
# For production: DATABASE_URL=postgresql://user:password@localhost/manobal

# Twilio Configuration for WhatsApp
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=whatsapp:+14155238886  # Example Twilio WhatsApp number

# AI Services
GOOGLE_API_KEY=your-google-gemini-api-key
HUME_API_KEY=your-hume-api-key

# Application Settings
MAX_DAILY_MESSAGES=20  # Maximum number of messages per day per user
LOG_LEVEL=INFO
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password-immediately

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds

# CORS Settings (for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000 